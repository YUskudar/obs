@model List<obs.Models.teacher>

@{
    ViewBag.Title = "Öğretmen Listesi";
}

<h2 class="text-center mb-4">Öğretmen Listesi</h2>

<div class="row">
    @foreach (var teacher in Model)
    {
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card mb-4 shadow-lg rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="my-0 font-weight-normal">@teacher.teachername_surname</h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-4">
                        <li><strong>Doğum Tarihi:</strong> @teacher.teacherbirth.ToShortDateString()</li>
                        <li><strong>Doğum Yeri:</strong> @teacher.teachercity</li>
                        <li><strong>Lisansı:</strong> @teacher.teacherlicance</li>
                        <li><strong>Telefon Numarası:</strong> @teacher.teacherphonenumber</li>
                        <li>
                            <strong>Görevli Olduğu Sınıflar:</strong>
                            <ul class="list-inline">
                                @foreach (var classItem in teacher.@class)
                                {
                                    <li class="list-inline-item">@classItem.classname (@classItem.classyear)</li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-header {
        font-size: 18px;
        padding: 10px;
    }

    .card-body {
        padding: 20px;
        background-color: #f8f9fa;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .list-inline-item {
        display: inline-block;
        margin-right: 10px;
        background-color: #e9ecef;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .text-center {
        text-align: center;
    }
</style>
