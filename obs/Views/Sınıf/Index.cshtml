@model List<obs.Models.@class>

@{
    ViewBag.Title = "Sınıf Listesi";
}

<h2 class="text-center mb-4">Sınıf Listesi</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Sınıf Adı</th>
                <th scope="col">Yılı</th>
                <th scope="col">Öğretmeni</th>
                <th scope="col" class="text-center">Öğrenciler</th>
                <th scope="col" class="text-center">Yoklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var @class in Model)
            {
                <tr>
                    <td>@(@class.classname)</td>
                    <td>@(@class.classyear)</td>
                    <td>@(@class.teacher?.teachername_surname)</td>
                    <td class="text-center">
                        <a href="@Url.Action("StudentsByClass", "Sınıf", new { id = @class.cid })" class="btn btn-info btn-sm">İncele</a>
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("TakeAttendance", "Sınıf", new { classId = @class.cid })" class="btn btn-primary btn-sm">Yoklama Al</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        font-size: 16px;
        margin-bottom: 0;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .text-center {
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
